@model PresentationLayer.Models.CollectionModels.CollectionCreateViewModel

<h2>Edit Collection</h2>
<form method="post" asp-controller="Collection" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Topic"></label><br />
        <input asp-for="Topic" />
    </div>
    <div>
        <label asp-for="Description"></label><br />
        <input asp-for="Description" />
    </div>
    <div></div>
    <div>
        <button type="submit" class="btn btn-light" asp-route-itemid="@ViewBag.CollectionId"> Edit </button>
    </div>
</form>