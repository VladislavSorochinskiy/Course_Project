@model PresentationLayer.Models.ItemModels.ItemAdditionViewModel
@using DataLayer.Entities

<h2>Edit item</h2>
<form method="post" asp-controller="Item" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name"></label><br />
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tag"></label><br />
            <input asp-for="Tag" />
            <span asp-validation-for="Tag"></span>
        </div>
        <div class="form-group">
            @foreach(var field in ViewBag.Fields)
                {
                <div>
                     <label>@field</label><br />
                     <input type="hidden" name="FieldNames" value="@field"/>
                     <input type="text" name="Contents"/>
                     <span asp-validation-for="Contents"></span>
                </div>
                }   
        </div>
    <button type="submit" class="btn btn-outline-dark" asp-route-itemId="@ViewBag.ItemId"Edit>Edit</button>
</form>